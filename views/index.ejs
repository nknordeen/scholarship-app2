<!DOCTYPE html>
<html>
  <head>
    <title>findMonies Club</title>
    <style rel="stylesheet">
      table {
          text-align: left;
          font-size: large;
      }
      header>h1 {
          text-align: center;
      }
      table {
          margin: auto;
          margin-top: 5%;
      }
      td, th {

      }
      body {
          background-color: #85bb65
      }
      #page {
          margin-top: 20%;
      }
    </style>
  </head>
  <body>
    <div id="page">
      <header>
        <h1>findMonies Scholarships</h1>
      </header>
      <div id="table">
        <table>
          <tr id="table-head">
            <th>Name</th>
            <th>Amount</th>
            <th>Description</th>
            <th>Link</th>
          </tr>
          <% scholarships.forEach(function(item){ %>
            <tr class="table-body">
              <td><%=item.name %></td>
              <td><%=item.amount %></td>
              <td><%=item.description %></td>
              <td><a href="<%=item.link %>"><%=item.link %></a></td>
            </tr>
          <% }); %>
        </table>
      </div>
    </div>
  </body>
</html>
